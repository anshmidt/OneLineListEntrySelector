<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.anshmidt.oneline_list_entry_selector_example.MainActivity">


    <com.anshmidt.oneline_list_entry_selector.OneLineListEntrySelector
        android:id="@+id/list_entry_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:textSize="35sp"
        app:backgroundColor="@android:color/holo_red_dark"
        app:textColor="@android:color/white"
        >

    </com.anshmidt.oneline_list_entry_selector.OneLineListEntrySelector>

</android.support.constraint.ConstraintLayout>
